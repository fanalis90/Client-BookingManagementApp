@{
}
<h1>Pokemon list</h1>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>No</th>
            <th>Nama</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody id="tbodyPoke">
    </tbody>
</table>



<!-- Modal -->
<div class="modal fade" id="modalPoke" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="inline">
                    <div class="col-7">
                        <img src="..." id="gambar-pokemon" class="rounded float-start" alt="pokemon.png" />
                    </div>

                    <div class="card col-6 pokemon-detail">
                        
                        <span class="tinggi">...</span>
                        <span class="berat">...</span>
                        <div class="tipe">
                            <p>type</p>
                            <div id="tipe-pokemon" >...</div>
                        </div>
            
                    </div>
                </div>
              
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Pokemon Move (jurus)</h5>
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>No</th>
                                    <th>Nama</th>
                                </tr>
                            </thead>
                        </table>
                        <div class="moves">
                            <table class="table table-striped table-hover">
                                <tbody id="PokeMove">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
               
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/pokemon.js" asp-append-version="true"></script>
}